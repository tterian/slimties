<table class="table">
    <thead>
        <tr>
            <th>Content</th>
            <th>Image</th>
            <th>Tags</th>
        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td><%= post.image %></td>
            <td><%= post.content %></td>
            <td><%= post.tags %></td>
        </tr>
        <% end %>
    </tbody>
</table>