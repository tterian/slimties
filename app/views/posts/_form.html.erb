<div class="row">
  <div class="col-lg-6">
    <h2>Add a post</h2>

    <hr>

	<%= form.filepicker_field :image, :onchange => 'onFileUpload(event)', :button_class => 'btn btn-info', :id => 'filepicker' %>

	<div class="image-container">
		<br>		
	</div>

    <div class="col-lg-12">
      <%= form.input :content %>
      <%= form.input :tags %>
    </div>

  </div>
</div>

<script type="text/javascript">

  function onFileUpload(event) {
    var file = event.fpfile;
    var image = '<img src="' + file.url + '" alt="thumbnail" class="img-thumbnail">'

    $('.image-container img').remove();
    $('.image-container').append(image)
    console.log(file.url);
  };

</script>