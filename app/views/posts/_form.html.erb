<div class="row">
  <div class="col-lg-6">
    <h2>Add a post</h2>

    <hr>

    <%= form.filepicker_field :image, :onchange => 'onFileUpload(event)',
                              :button_text => 'Pick image',
                              :button_class => 'btn btn-info',
                              :id => 'filepicker' %>

  	<div class="image-container">
  		<br>
  		<img src="http://placehold.it/350x250" alt="thumbnail" class="img-thumbnail">
  	</div>

    <div class="col-lg-12">
      <%= form.input :content %>
      <%= form.input :tags %>
    </div>

  </div>
</div>

<script type="text/javascript">
  //placeholder png
  $('#filepicker').val("https://www.filepicker.io/api/file/vWDROcRfTi6lJgUBb01x")

  function onFileUpload(event) {
    var file = event.fpfile;
    var image = '<img src="' + file.url + '" alt="thumbnail" class="img-thumbnail">'

    $('.image-container img').remove();
    $('.image-container').append(image);
  }

</script>